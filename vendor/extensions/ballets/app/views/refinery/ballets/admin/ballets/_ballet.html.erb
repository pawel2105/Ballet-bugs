<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(ballet) -%>">
  <span class='title'>
    <%= ballet.title %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.ballets_ballet_path(ballet),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_ballets_admin_ballet_path(ballet),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.ballets_admin_ballet_path(ballet),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => ballet.title),
        :method => :delete %>
  </span>
</li>
