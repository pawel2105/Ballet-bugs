<% content_for :body_content_title do %>
  <%= @ballet.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @ballet.title %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @ballet.date %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @ballet.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @ballet.description %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="ballets">
      <% @ballets.each do |ballet| %>
        <li>
          <%= link_to ballet.title, refinery.ballets_ballet_path(ballet) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
